<com.example.view.ArcMenu xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:hyman="http://schemas.android.com/apk/res/"
    android:id="@+id/id_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    hyman:position="right_top"
    hyman:radius="50dp" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/composer_button" >

        <ImageView
            android:id="@+id/id_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/composer_icn_plus" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/a"
        
        android:layout_width="45sp"
        android:layout_height="45sp"
        android:src="@drawable/main_icon_nearby"
        android:tag="Music" />

    <ImageView
         android:id="@+id/b"
        android:layout_width="45sp"
        android:layout_height="45sp"
        android:src="@drawable/main_icon_route"
        android:tag="Place" />

    <ImageView
         android:id="@+id/c"
        android:layout_width="45sp"
        android:layout_height="45sp"
        android:src="@drawable/main_icon_nav"
        android:tag="Sleep" />

    <ImageView
         android:id="@+id/d"
        android:layout_width="35sp"
        android:layout_height="35sp"
        android:src="@drawable/btn_share_normal"
        android:tag="Sun" />

    <ImageView
         android:id="@+id/e"
        android:layout_width="30sp"
        android:layout_height="30sp"
        android:src="@drawable/btn_back"
        android:tag="People" />
		
    
    

</com.example.view.ArcMenu>
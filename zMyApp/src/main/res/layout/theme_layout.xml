<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="36dp"
    android:background="@drawable/personal_back" >

     <ImageView
         android:id="@+id/iv_theme_backs"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentLeft="true"
         android:layout_alignParentTop="true"
         android:src="@drawable/uac_title_back_new" />



     <ImageView
         android:id="@+id/iv_user_login"
         android:layout_height="wrap_content"
         android:layout_width="wrap_content"
         android:layout_marginTop="30sp"
         android:layout_marginRight="30sp"
         android:layout_alignParentRight="true"
         android:layout_alignParentTop="true"
         android:src="@drawable/edittext_icon_man" />

     <TextView
         android:id="@+id/tv_user_sginers"
         android:layout_width="60sp"
         android:layout_height="wrap_content"
         android:layout_centerVertical="true"
         android:layout_centerHorizontal="true"
         android:textColor="@android:color/white"
         android:text="我的主题" />

 </RelativeLayout>
    <GridView
        android:id="@+id/gv_theme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numColumns="3" >
    </GridView>

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <RelativeLayout
        android:id="@+id/linearl_main"
        android:layout_width="fill_parent"
        android:layout_height="90sp"
        android:background="@android:color/transparent" 
        android:orientation="horizontal" >
        <ImageView
            android:id="@+id/im_table_weather"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14sp"
            android:onClick="onClick"
            android:src="@drawable/tab_weather" />

        <ImageView
            android:id="@+id/im_table_news"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:onClick="onClick"
            android:layout_centerHorizontal="true"
            android:src="@drawable/tab_shijing" />
        <ImageView
            android:id="@+id/im_table_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:onClick="onClick"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/tab_my" />
    </RelativeLayout>

</LinearLayout>
